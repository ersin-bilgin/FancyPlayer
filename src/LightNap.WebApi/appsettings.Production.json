{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DatabaseProvider": "SqlServer",
  "ConnectionStrings": {
    "DefaultConnection": "Server=${SQL_SERVER};Database=${SQL_DATABASE};User Id=${SQL_USER};Password=${SQL_PASSWORD};TrustServerCertificate=true;MultipleActiveResultSets=true"
  },
  "ApplicationSettings": {
    "AutomaticallyApplyEfMigrations": true,
    "LogOutInactiveDeviceDays": 30,
    "RequireEmailVerification": false,
    "RequireTwoFactorForNewUsers": false,
    "SiteUrlRootForEmails": "https://${WEBSITE_HOSTNAME}/",
    "UseSameSiteStrictCookies": true
  },
  "Jwt": {
    "Key": "${JWT_KEY}",
    "Issuer": "https://${WEBSITE_HOSTNAME}",
    "Audience": "https://${WEBSITE_HOSTNAME}",
    "ExpirationMinutes": 120
  },
  "Email": {
    "Provider": "Smtp",
    "FromEmail": "${EMAIL_FROM}",
    "FromDisplayName": "${EMAIL_DISPLAY_NAME}",
    "Smtp": {
      "Host": "${SMTP_HOST}",
      "Port": 587,
      "EnableSsl": true,
      "User": "${SMTP_USER}",
      "Password": "${SMTP_PASSWORD}"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:8080"
      },
      "Https": {
        "Url": "https://0.0.0.0:8081"
      }
    }
  }
} 